<!-- Jumbotron -->
<div class="card card-image rounded-0" style="background-color: #63d471; background-image: linear-gradient(315deg, #63d471 0%, #233329 74%);">
  <div class="text-white text-center rgba-stylish-strong py-0 px-4">
    <div class="py-0">
      <!-- Content -->
      <h2 class="card-title h2 my-4 py-2">Event : <%= @event.title %></h2>
    </div>
  </div>
</div>
<!-- Jumbotron -->

<div class="container">
	<h1 class="h3 mb-3 font-weight-normal text-center"> Attendees : </h1>
	<% @attendee.each do |participant| %>
		<div class="card mt-3 mb-3">
			<div class="card-body">
				<p class="card-text">
					<%= attendee.first_name %> <%= attendee.last_name %> (email: <%= attendee.email %> )
				</p>
			</div>
		</div>
	<% end %>

	<%= link_to "Edit my event", edit_event_path(@event), class: 'btn btn-primary btn-lg btn-block mt-5' %>
</div>